set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

export HOME=/var/vcap

PYTHON_VERSION=3.2.3
DISTRIBUTE_VERSION=0.6.28
PIP_VERSION=1.0

cd ${BOSH_COMPILE_TARGET}
tar xzf python32/Python-${PYTHON_VERSION}.tgz
cd Python-${PYTHON_VERSION}
./configure --prefix=${BOSH_INSTALL_TARGET}
make
make install

cd ${BOSH_COMPILE_TARGET}
tar xzf python32/distribute-${DISTRIBUTE_VERSION}.tar.gz
cd distribute-${DISTRIBUTE_VERSION}
${BOSH_INSTALL_TARGET}/bin/python3 setup.py install

cd ${BOSH_COMPILE_TARGET}
tar xfz pip/pip-${PIP_VERSION}.tar.gz
cd pip-${PIP_VERSION}
${BOSH_INSTALL_TARGET}/bin/python3 setup.py install