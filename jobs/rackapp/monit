check process rackapp
  with pidfile /var/vcap/sys/run/rackapp/rackapp.pid
  start program "/var/vcap/jobs/rackapp/bin/rackapp_ctl start"
  stop program "/var/vcap/jobs/rackapp/bin/rackapp_ctl stop"
  group vcap

<% if properties.cc.use_nginx %>
check process nginx
  with pidfile /var/vcap/sys/run/nginx/nginx.pid
  start program "/var/vcap/jobs/rackapp/bin/nginx_ctl start"
  stop program "/var/vcap/jobs/rackapp/bin/nginx_ctl stop"
  group vcap
<% end %>
