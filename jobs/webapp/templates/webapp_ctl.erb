#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/webapp/bin/ctl_setup.sh

# Setup HTTP_PROXY, HTTPS_PROXY, NO_PROXY as necessary
source /var/vcap/jobs/webapp/bin/webapp_ctl_nginx.sh

# Helpers for PostgresDB
source /var/vcap/jobs/webapp/bin/ctl_pg_utils.sh

# Helpers for Redis
source /var/vcap/jobs/webapp/bin/ctl_redis_utils.sh


APP_PACKAGE='<%= properties.webapp && properties.webapp.package || "rackapp" %>' # which bosh package contains the rackapp/webapp
export RAILS_ENV=production
export RACK_ENV=${RAILS_ENV}
export PORT=5000

export WEBAPP_JOB_DIR=/var/vcap/jobs/webapp
WEBAPP_DIR=/var/vcap/packages/$APP_PACKAGE

export WEBAPP_CONFIG=$WEBAPP_JOB_DIR/config/appconfig.yml
export BUNDLE_GEMFILE=$WEBAPP_DIR/Gemfile


export CONFIG_DIR=$WEBAPP_JOB_DIR/config

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE "webapp"

    cd $WEBAPP_DIR

    echo "Linking config/database.yml"
    mkdir -p $WEBAPP_DIR/config
    if [[ -f $WEBAPP_DIR/config/database.yml ]]
    then
      mv $WEBAPP_DIR/config/database.yml{,.orig}
    fi
    ln -s $WEBAPP_JOB_DIR/config/database.yml $WEBAPP_DIR/config/database.yml

    # if redis enabled, link it to application
    link_redis_config yaml config/redis.yml

    # Migrations, if requested
    source /var/vcap/jobs/webapp/bin/rails_ctl_setup.sh

    ulimit -c unlimited

    cd $WEBAPP_DIR
    echo "Launching webapp within $WEBAPP_DIR"
    wait_for_database
    
    # Start the rack app using requested appstack
    source /var/vcap/jobs/webapp/bin/webapp_ctl_start.sh

    chown vcap:vcap $PIDFILE

    echo "Running webapp on $PORT"
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: webapp_ctl {start|stop}"

    ;;

esac
exit 0