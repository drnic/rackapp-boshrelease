#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

APP_PACKAGE=todo # which bosh package contains the rackapp/webapp
export RAILS_ENV=production
export RACK_ENV=production
export PORT=5000

export PATH=/var/vcap/packages/ruby/bin:$PATH

export WEBAPP_JOB_DIR=/var/vcap/jobs/webapp
WEBAPP_PACKAGE_DIR=/var/vcap/packages/$APP_PACKAGE
WEBAPP_DIR=$WEBAPP_PACKAGE_DIR/$APP_PACKAGE

RUN_DIR=/var/vcap/sys/run/webapp
LOG_DIR=/var/vcap/sys/log/webapp
PIDFILE=$RUN_DIR/webapp.pid

export WEBAPP_CONFIG=$WEBAPP_JOB_DIR/config/appconfig.yml
export BUNDLE_GEMFILE=$WEBAPP_DIR/Gemfile
export HOME=/home/vcap # rake needs it to be set to run tasks
export TMPDIR=/var/vcap/data/webapp/tmp

# https://github.com/pmirshad/cgit-on-nginx/wiki/Installing-cgit-with-nginx-on-Ubuntu-11.10
<% if properties.env %>
<% if properties.env.http_proxy %>
export HTTP_PROXY='<%= properties.env.http_proxy %>'
export http_proxy='<%= properties.env.http_proxy %>'
<% end %>
<% if properties.env.https_proxy %>
export HTTPS_PROXY='<%= properties.env.https_proxy %>'
export https_proxy='<%= properties.env.https_proxy %>'
<% end %>
<% if properties.env.no_proxy %>
export NO_PROXY='<%= properties.env.no_proxy %>'
export no_proxy='<%= properties.env.no_proxy %>'
<% end %>
<% end %>

export CONFIG_DIR=$WEBAPP_JOB_DIR/config

export C_INCLUDE_PATH=/var/vcap/packages/mysqlclient/include/mysql:/var/vcap/packages/sqlite/include:/var/vcap/packages/libpq/include
export LIBRARY_PATH=/var/vcap/packages/mysqlclient/lib/mysql:/var/vcap/packages/sqlite/lib:/var/vcap/packages/libpq/lib
export LANG=en_US.UTF-8

source /var/vcap/packages/common/utils.sh
redirect_output 'webapp'

case $1 in

  start)
    echo pid_guard $PIDFILE "webapp"
    pid_guard $PIDFILE "webapp"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    mkdir -p $TMPDIR

    chown vcap:vcap $RUN_DIR
    chown vcap:vcap $LOG_DIR
    chown vcap:vcap $TMPDIR

    cd $WEBAPP_DIR
    <% if properties.webapp && properties.webapp.run_migrations %>
    echo "Running migrations"
    export WEBAPP_NOSTART=1
    bundle exec rake db:migrate >>$LOG_DIR/db_migrate.stdout.log 2>>$LOG_DIR/db_migrate.stderr.log
    if [ $? != 0 ]; then
      echo "Migrations failed"
      exit 1
    fi
    unset WEBAPP_NOSTART
    <% else %>
    echo "Skipping migrations"
    <% end %>

    ulimit -c unlimited

    cd $WEBAPP_DIR
    echo "Launching webapp within $WEBAPP_DIR"

    <% if properties.webapp && properties.webapp.appstack == 'puma' %>
    <% puma_threads = properties.webapp.puma && properties.webapp.puma.threads %>
    MIN_THREADS=<%= (puma_threads && puma_threads.min) || 0 %>
    MAX_THREADS=<%= (puma_threads && puma_threads.max) || 16 %>
    exec bundle exec puma --pidfile $PIDFILE -p $PORT -t $MIN_THREADS:$MAX_THREADS \
         >>$LOG_DIR/webapp.stdout.log \
         2>>$LOG_DIR/webapp.stderr.log || exit 1
    <% else %>
    exec bundle exec rackup -D -P $PIDFILE -p $PORT \
         >>$LOG_DIR/webapp.stdout.log \
         2>>$LOG_DIR/webapp.stderr.log || exit 1
    <% end %>

    chown vcap:vcap $PIDFILE

    echo "Running webapp on $PORT"
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: webapp_ctl {start|stop}"

    ;;

esac
exit 0