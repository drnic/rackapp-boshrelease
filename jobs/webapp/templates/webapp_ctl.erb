#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/<%= name %>/bin/ctl_setup.sh

# Setup HTTP_PROXY, HTTPS_PROXY, NO_PROXY as necessary
source $JOB_DIR/bin/webapp_ctl_nginx.sh

# Helpers for PostgresDB
source $JOB_DIR/bin/ctl_db_utils.sh

# Helpers for Redis
source $JOB_DIR/bin/ctl_redis_utils.sh


APP_PACKAGE='<%= properties.webapp && properties.webapp.package || "rackapp" %>' # which bosh package contains the rackapp/webapp
export RAILS_ENV=production
export RACK_ENV=${RAILS_ENV}
export PORT=5000

WEBAPP_DIR=/var/vcap/packages/$APP_PACKAGE

export WEBAPP_CONFIG=$JOB_DIR/config/appconfig.yml
export BUNDLE_GEMFILE=$WEBAPP_DIR/Gemfile


export CONFIG_DIR=$JOB_DIR/config

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE "webapp"

    cd $WEBAPP_DIR

    # link db config to application
    link_sql_db_config yaml config/database.yml
    
    # if redis enabled, link it to application
    link_redis_config yaml config/redis.yml

    # Migrations, if requested
    source $JOB_DIR/bin/rails_ctl_setup.sh

    # TODO what is 'ulimit -c unlimited' for; when not to use it?
    ulimit -c unlimited

    # Start the rack app using requested appstack
    source $JOB_DIR/bin/webapp_ctl_start.sh

    echo "Running webapp on $PORT"
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: webapp_ctl {start|stop}"

    ;;

esac
exit 0